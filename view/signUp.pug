html
	head
		title Blog Application
	body
		div(class="topHeader")
			form(action="/signup", id="signup", method="POST")
				h1 Choose Your Credentials
					input(class='username', type="text", placeholder="Username", autofocus required)
					input(class="email", type="text", placeholder="Email Address", required)
					input(class="password", type="password", placeholder="Desired Password", required)
					input(class="passwordrepeat", type="password", placeholder="Repeat Password")
					input(type="button", class="submit", value="SIGN UP!", onclick="location.href='/homepage'")